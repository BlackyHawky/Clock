<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/checked"
        android:drawable="@drawable/bg_button_checked_for_anim"
        android:state_checked="true" />
    <item
        android:id="@+id/unchecked"
        android:drawable="@drawable/bg_button_unchecked_for_anim" />
    <transition
        android:drawable="@drawable/bg_button_unchecked_to_checked_anim"
        android:fromId="@+id/unchecked"
        android:toId="@+id/checked" />
    <transition
        android:drawable="@drawable/bg_button_checked_to_unchecked_anim"
        android:fromId="@+id/checked"
        android:toId="@+id/unchecked" />
</animated-selector>