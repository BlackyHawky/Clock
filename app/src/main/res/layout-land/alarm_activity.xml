<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alarm_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:background="#191C1E">

    <ImageView
        android:id="@+id/alarm_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="@null" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/alarm_vertical_middle_guide"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/alarm_landscape_vertical_end_guide"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/alarm_landscape_horizontal_start_guide"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/alarm_landscape_horizontal_end_guide"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.75" />

        <!-- Clock view -->
        <FrameLayout
            android:id="@+id/clock_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/alarm_vertical_middle_guide"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.best.deskclock.uicomponents.AnalogClock
                android:id="@+id/analog_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:visibility="gone" />

            <TextClock
                android:id="@+id/digital_clock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:singleLine="true"
                tools:text="12:34"
                tools:textSize="50sp"
                tools:textColor="@android:color/white" />

        </FrameLayout>

        <!-- Alarm title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/alarm_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            app:layout_constraintStart_toEndOf="@+id/alarm_vertical_middle_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/alarm_landscape_horizontal_start_guide"
            tools:text="@string/menu_alarm"
            tools:textSize="26sp"
            tools:textColor="@android:color/white" />

        <!-- Snooze button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/snooze_button"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            app:layout_constraintStart_toEndOf="@+id/alarm_vertical_middle_guide"
            app:layout_constraintEnd_toStartOf="@+id/alarm_landscape_vertical_end_guide"
            app:layout_constraintBottom_toTopOf="@+id/alarm_landscape_horizontal_end_guide"
            tools:text="@string/alarm_alert_snooze_text"
            tools:visibility="gone" />

        <!-- Dismiss button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dismiss_button"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:text="@string/button_action_dismiss"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            app:layout_constraintStart_toEndOf="@+id/alarm_landscape_vertical_end_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/alarm_landscape_horizontal_end_guide"
            tools:visibility="gone" />

        <!-- Slide zone -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/slide_zone_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="12dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toEndOf="@+id/alarm_vertical_middle_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/alarm_landscape_horizontal_end_guide"
            tools:background="@drawable/bg_alarm_slide_zone">

            <!-- Snooze text -->
            <com.best.deskclock.uicomponents.AutoSizingTextView
                android:id="@+id/snooze_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="@null"
                android:paddingEnd="6dp"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/alarm_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="@string/button_action_snooze"
                tools:textColor="@android:color/white" />

            <!-- Dismiss text -->
            <com.best.deskclock.uicomponents.AutoSizingTextView
                android:id="@+id/dismiss_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="@null"
                android:paddingVertical="10dp"
                android:text="@string/button_action_dismiss"
                android:textSize="20sp"
                android:gravity="end|center_vertical"
                android:textStyle="bold"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@+id/alarm_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:textColor="@android:color/white" />

            <!-- Pill in the background of the Alarm button -->
            <com.best.deskclock.uicomponents.PillView
                android:id="@+id/pill"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layerType="hardware"
                android:clickable="false"
                android:focusable="false"
                android:importantForAccessibility="no"
                tools:fillColor="@color/md_theme_onSurfaceVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/alarm_button"
                app:layout_constraintBottom_toBottomOf="@id/alarm_button" />

            <!-- Alarm button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/alarm_button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginVertical="10dp"
                app:icon="@drawable/ic_tab_alarm_static"
                app:iconSize="24dp"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:backgroundTint="@color/md_theme_primary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ringtone_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/alarm_vertical_middle_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ringtone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:contentDescription="@null"
                tools:src="@drawable/ic_music_note"
                tools:tint="@color/md_theme_outline" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ringtone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:focusable="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                tools:text="Daydream"
                tools:textColor="@color/md_theme_outline" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- View that appears after the alarm has been snoozed or dismissed -->
    <LinearLayout
        android:id="@+id/alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/alert_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/alert_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</merge>