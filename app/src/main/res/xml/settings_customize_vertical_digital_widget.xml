<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.best.deskclock.settings.custompreference.CustomPreferenceCategory
        android:title="@string/style_category_title"
        app:allowDividerAbove="false"
        app:iconSpaceReserved="false"
        tools:layout="@layout/settings_preference_category_layout">

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_display_text_uppercase"
            android:title="@string/display_text_uppercase_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_display_text_shadow"
            android:title="@string/display_text_shadow_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_display_background"
            android:title="@string/widget_background_title"
            android:defaultValue="false"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_widget_customize_background_corner_radius"
            android:title="@string/customize_background_corner_radius_title"
            android:summary="@string/customize_background_corner_radius_summary"
            android:defaultValue="false"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSeekbarPreference
            android:key="key_vertical_widget_background_corner_radius"
            android:title="@string/background_corner_radius_title"
            android:summary="@string/label_default"
            android:defaultValue="24"
            android:max="100"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_seekbar_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_display_date"
            android:title="@string/display_date_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_display_next_alarm"
            android:title="@string/display_next_alarm_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_apply_horizontal_padding"
            android:title="@string/widget_apply_horizontal_padding_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

    </com.best.deskclock.settings.custompreference.CustomPreferenceCategory>

    <com.best.deskclock.settings.custompreference.CustomPreferenceCategory
        android:title="@string/colors_category_title"
        app:allowDividerAbove="false"
        app:iconSpaceReserved="false"
        tools:layout="@layout/settings_preference_category_layout">

        <com.best.deskclock.settings.custompreference.ColorPickerPreference
            android:key="key_vertical_digital_widget_background_color"
            android:title="@string/background_color_title"
            android:defaultValue="#70000000"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_default_hours_color"
            android:title="@string/hour_default_color_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.ColorPickerPreference
            android:key="key_vertical_digital_widget_custom_hours_color"
            android:title="@string/hour_color_title"
            android:defaultValue="#FFFFFF"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_default_minutes_color"
            android:title="@string/minute_default_color_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.ColorPickerPreference
            android:key="key_vertical_digital_widget_custom_minutes_color"
            android:title="@string/minute_color_title"
            android:defaultValue="#FFFFFF"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_default_date_color"
            android:title="@string/date_default_color_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.ColorPickerPreference
            android:key="key_vertical_digital_widget_custom_date_color"
            android:title="@string/date_color_title"
            android:defaultValue="#FFFFFF"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.CustomSwitchPreference
            android:key="key_vertical_digital_widget_default_next_alarm_color"
            android:title="@string/next_alarm_default_color_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.best.deskclock.settings.custompreference.ColorPickerPreference
            android:key="key_vertical_digital_widget_custom_next_alarm_color"
            android:title="@string/next_alarm_color_title"
            android:defaultValue="#FFFFFF"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

    </com.best.deskclock.settings.custompreference.CustomPreferenceCategory>

    <com.best.deskclock.settings.custompreference.CustomPreferenceCategory
        android:title="@string/font_category_title"
        app:allowDividerAbove="false"
        app:iconSpaceReserved="false"
        tools:layout="@layout/settings_preference_category_layout">

        <com.best.deskclock.settings.custompreference.CustomSeekbarPreference
            android:key="key_vertical_digital_widget_maximum_clock_font_size"
            android:title="@string/max_clock_font_size_title"
            android:summary="@string/label_default"
            android:defaultValue="70"
            android:max="200"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_seekbar_layout" />

    </com.best.deskclock.settings.custompreference.CustomPreferenceCategory>

</PreferenceScreen>
