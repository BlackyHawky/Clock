<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <PreferenceCategory
        android:title="@string/styles_and_colors_category_title"
        app:allowDividerAbove="false"
        app:iconSpaceReserved="false"
        tools:layout="@layout/settings_preference_category_layout">

        <SwitchPreferenceCompat
            android:key="key_next_alarm_widget_display_background"
            android:title="@string/widget_background_title"
            android:defaultValue="false"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.rarepebble.colorpicker.ColorPreference
            android:key="key_next_alarm_widget_background_color"
            android:title="@string/background_color_title"
            android:defaultValue="#70000000"
            app:colorpicker_selectNoneButtonText="@string/label_default"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <SwitchPreferenceCompat
            android:key="key_next_alarm_widget_default_title_color"
            android:title="@string/next_alarm_widget_default_title_color"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.rarepebble.colorpicker.ColorPreference
            android:key="key_next_alarm_widget_custom_title_color"
            android:title="@string/next_alarm_widget_custom_title_color"
            android:defaultValue="#FFFFFF"
            app:colorpicker_showAlpha="false"
            app:colorpicker_selectNoneButtonText="@string/label_default"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <SwitchPreferenceCompat
            android:key="key_next_alarm_widget_default_alarm_title_color"
            android:title="@string/next_alarm_widget_default_alarm_title_color"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.rarepebble.colorpicker.ColorPreference
            android:key="key_next_alarm_widget_custom_alarm_title_color"
            android:title="@string/next_alarm_widget_custom_alarm_title_color"
            android:defaultValue="#FFFFFF"
            app:colorpicker_showAlpha="false"
            app:colorpicker_selectNoneButtonText="@string/label_default"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <SwitchPreferenceCompat
            android:key="key_next_alarm_widget_default_alarm_color"
            android:title="@string/widget_next_alarm_default_color_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <com.rarepebble.colorpicker.ColorPreference
            android:key="key_next_alarm_widget_custom_alarm_color"
            android:title="@string/widget_next_alarm_custom_color_title"
            android:defaultValue="#FFFFFF"
            app:colorpicker_showAlpha="false"
            app:colorpicker_selectNoneButtonText="@string/label_default"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <SwitchPreferenceCompat
            android:key="key_next_alarm_widget_apply_horizontal_padding"
            android:title="@string/widget_apply_horizontal_padding_title"
            android:defaultValue="true"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/font_category_title"
        app:allowDividerAbove="false"
        app:iconSpaceReserved="false"
        tools:layout="@layout/settings_preference_category_layout">

        <com.best.deskclock.settings.CustomSeekbarPreference
            android:key="key_next_alarm_widget_maximum_font_size"
            android:title="@string/next_alarm_widget_max_font_size_title"
            android:summary="@string/label_default"
            android:defaultValue="70"
            android:max="200"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_seekbar_layout" />

    </PreferenceCategory>

</PreferenceScreen>
