<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <PreferenceCategory
        android:title="@string/actions_category_title"
        app:allowDividerAbove="false"
        app:iconSpaceReserved="false"
        tools:layout="@layout/settings_preference_category_layout">

        <ListPreference
            android:key="key_sw_volume_up_action"
            android:title="@string/sw_volume_up_action_title"
            android:entries="@array/stopwatch_actions_entries"
            android:entryValues="@array/stopwatch_actions_values"
            android:defaultValue="0"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <ListPreference
            android:key="key_sw_volume_up_action_after_long_press"
            android:title="@string/sw_long_press_volume_up_action_title"
            android:entries="@array/stopwatch_actions_entries"
            android:entryValues="@array/stopwatch_actions_values"
            android:defaultValue="0"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <ListPreference
            android:key="key_sw_volume_down_action"
            android:title="@string/sw_volume_down_action_title"
            android:entries="@array/stopwatch_actions_entries"
            android:entryValues="@array/stopwatch_actions_values"
            android:defaultValue="0"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

        <ListPreference
            android:key="key_sw_volume_down_action_after_long_press"
            android:title="@string/sw_long_press_volume_down_action_title"
            android:entries="@array/stopwatch_actions_entries"
            android:entryValues="@array/stopwatch_actions_values"
            android:defaultValue="0"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            tools:layout="@layout/settings_preference_layout" />

    </PreferenceCategory>

</PreferenceScreen>