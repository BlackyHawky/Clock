<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/nextAlarmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="none"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/widget_text_color"
            tools:text="@string/next_alarm_widget_text"
            tools:textSize="18sp" />

        <TextView
            android:id="@+id/nextAlarmTextForCustomColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="none"
            android:includeFontPadding="false"
            android:maxLines="1"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/nextAlarmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="none"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/next_alarm_widget_title_color"
            tools:text="Test"
            tools:textSize="18sp" />

        <TextView
            android:id="@+id/nextAlarmTitleForCustomColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="none"
            android:includeFontPadding="false"
            android:maxLines="1"
            tools:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- This view is drawn to a Bitmap and sent to the widget as an icon. -->
            <TextView
                android:id="@+id/nextAlarmIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:text="@string/clock_emoji"
                android:textColor="@color/next_alarm_widget_alarm_color"
                tools:text=""
                tools:drawableStart="@drawable/ic_tab_alarm_static"
                tools:paddingEnd="3dp"
                tools:drawableTint="@color/next_alarm_widget_alarm_color" />

            <TextView
                android:id="@+id/nextAlarmIconForCustomColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:text="@string/clock_emoji"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/nextAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ellipsize="none"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/next_alarm_widget_alarm_color"
                tools:text="Mo, 07:30 AM"
                tools:textSize="18sp" />

            <TextView
                android:id="@+id/nextAlarmForCustomColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ellipsize="none"
                android:includeFontPadding="false"
                android:maxLines="1"
                tools:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
