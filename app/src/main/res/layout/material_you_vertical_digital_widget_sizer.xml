<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextClock
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:includeFontPadding="false"
        android:ellipsize="none"
        android:maxLines="1"
        tools:text="Sat. 20 Jan."
        tools:textSize="18sp"
        tools:textColor="@color/digital_widget_text_color" />

    <TextClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:ellipsize="none"
        android:format12Hour="hh"
        android:format24Hour="kk"
        android:maxLines="1"
        tools:text="01"
        tools:textSize="70sp"
        tools:textColor="@color/vertical_digital_widget_hour_color" />

    <TextClock
        android:id="@+id/clock_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:ellipsize="none"
        android:format12Hour="mm"
        android:format24Hour="mm"
        android:maxLines="1"
        tools:text="00"
        tools:textSize="70sp"
        tools:textColor="@color/vertical_digital_widget_minute_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <!-- This view is drawn to a Bitmap and sent to the widget as an icon. -->
        <TextView
            android:id="@+id/nextAlarmIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="1"
            android:text="@string/clock_emoji"
            tools:text=""
            tools:drawableStart="@drawable/ic_tab_alarm_static"
            tools:paddingHorizontal="3dp"
            tools:drawableTint="@color/digital_widget_text_color"
            tools:textColor="@color/digital_widget_text_color" />

        <TextView
            android:id="@+id/nextAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="@null"
            android:paddingEnd="3dp"
            android:ellipsize="none"
            android:maxLines="1"
            android:textColor="@color/digital_widget_text_color"
            tools:text="Mo, 07:30 AM"
            tools:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
