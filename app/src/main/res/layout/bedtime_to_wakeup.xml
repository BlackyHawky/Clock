<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <ImageView
        app:layout_gravity="end"
        app:srcCompat="@drawable/ic_moon"
        app:tint="@color/md_theme_outline"
        app:layout_columnWeight="0.3"
        android:contentDescription="@null" />

    <View
        android:id="@+id/hairline"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/md_theme_outline"
        app:layout_gravity="fill_horizontal|center_vertical"
        app:layout_column="1"
        app:layout_columnWeight="0.3"
        app:layout_row="0" />

    <TextView
        android:id="@+id/hours_of_sleep"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_gravity="fill_horizontal|fill_vertical"
        app:layout_column="1"
        app:layout_row="0"
        tools:text="9h30" />

    <ImageView
        app:layout_gravity="start"
        app:srcCompat="@drawable/ic_tab_wakeup"
        app:tint="@color/md_theme_outline"
        app:layout_columnWeight="0.3"
        android:contentDescription="@null" />

</androidx.gridlayout.widget.GridLayout>
