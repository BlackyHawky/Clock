<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vertical_digital_widget_material_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/material_you_vertical_digital_widget_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextClock
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ellipsize="none"
        android:includeFontPadding="false"
        android:maxLines="1"
        tools:text="Sat. 20 Jan."
        tools:textSize="18sp"
        tools:textColor="@color/digital_widget_text_color" />

    <TextClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:ellipsize="none"
        android:format12Hour="hh"
        android:format24Hour="kk"
        android:maxLines="1"
        tools:text="01"
        tools:textSize="70sp"
        tools:textColor="@color/vertical_digital_widget_hour_color" />

    <TextClock
        android:id="@+id/clock_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:ellipsize="none"
        android:format12Hour="mm"
        android:format24Hour="mm"
        android:maxLines="1"
        tools:text="20"
        tools:textSize="70sp"
        tools:textColor="@color/vertical_digital_widget_minute_color" />

    <LinearLayout
        android:id="@+id/digital_widget_bottom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <!-- Do not use the App tint attribute, otherwise the icon will not
        change color when the device mode (light or dark) changes. -->
        <ImageView
            android:id="@+id/nextAlarmIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_tab_alarm_static"
            tools:tint="@color/digital_widget_text_color"
            tools:paddingHorizontal="3dp"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/nextAlarm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingStart="@null"
            android:paddingEnd="3dp"
            android:ellipsize="none"
            android:maxLines="1"
            tools:text="Sat. 10:45 AM"
            tools:textSize="18sp"
            tools:textColor="@color/digital_widget_text_color" />

    </LinearLayout>

</LinearLayout>