<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- A horizontal padding is added because on some devices
            the text shadow is cut off. -->
            <TextClock
                android:id="@+id/leftClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="3dp"
                android:baselineAligned="true"
                android:gravity="center"
                android:shadowRadius="2.75"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                tools:text="01:23 AM"
                tools:textSize="16sp"
                tools:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <!-- A horizontal padding is added because on some devices
                    the text shadow is cut off. -->
                    <TextView
                        android:id="@+id/cityNameLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="3dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:shadowRadius="2.75"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        tools:text="City1"
                        tools:textColor="@android:color/white" />

                </FrameLayout>

                <!-- A horizontal padding is added because on some devices
                the text shadow is cut off. -->
                <TextView
                    android:id="@+id/cityDayLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:ellipsize="none"
                    android:format12Hour="@string/abbrev_wday"
                    android:format24Hour="@string/abbrev_wday"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:shadowRadius="2.75"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    tools:text="/ Mon"
                    tools:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- A horizontal padding is added because on some devices
            the text shadow is cut off. -->
            <TextClock
                android:id="@+id/rightClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                android:layout_gravity="center"
                android:baselineAligned="true"
                android:gravity="center"
                android:shadowRadius="2.75"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                tools:text="01:23 AM"
                tools:textSize="16sp"
                tools:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <!-- A horizontal padding is added because on some devices
                    the text shadow is cut off. -->
                    <TextView
                        android:id="@+id/cityNameRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="3dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:shadowRadius="2.75"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        tools:text="City 2"
                        tools:textColor="@android:color/white" />

                </FrameLayout>

                <!-- A horizontal padding is added because on some devices
                the text shadow is cut off. -->
                <TextView
                    android:id="@+id/cityDayRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:ellipsize="none"
                    android:format12Hour="@string/abbrev_wday"
                    android:format24Hour="@string/abbrev_wday"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:shadowRadius="2.75"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    tools:text="/ Mon"
                    tools:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Spacer must be a @RemoteView; can't use Space. -->
    <FrameLayout
        android:id="@+id/citySpacer"
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</LinearLayout>