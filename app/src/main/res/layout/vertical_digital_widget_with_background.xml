<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vertical_digital_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/digital_widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true">

        <TextClock
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ellipsize="none"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textAllCaps="true"
            android:shadowRadius="2.75"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            tools:text="Sat. 20 Jan."
            tools:textSize="18sp"
            tools:textColor="@android:color/white" />

        <TextClock
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:ellipsize="none"
            android:format12Hour="hh"
            android:format24Hour="kk"
            android:maxLines="1"
            android:shadowRadius="2.75"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            tools:text="01"
            tools:textSize="70sp"
            tools:textColor="@android:color/white" />

        <TextClock
            android:id="@+id/clock_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:ellipsize="none"
            android:format12Hour="mm"
            android:format24Hour="mm"
            android:maxLines="1"
            android:shadowRadius="2.75"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            tools:text="20"
            tools:textSize="70sp"
            tools:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/digital_widget_bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <!-- Do not use the App tint attribute, otherwise the icon will not
            change color when the device mode (light or dark) changes. -->
            <ImageView
                android:id="@+id/nextAlarmIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_tab_alarm_static"
                tools:paddingHorizontal="3dp" />

            <TextView
                android:id="@+id/nextAlarm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="@null"
                android:paddingEnd="3dp"
                android:ellipsize="none"
                android:maxLines="1"
                android:textAllCaps="true"
                android:shadowRadius="2.75"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                tools:text="Sat. 10:45 AM"
                tools:textSize="18sp"
                tools:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>