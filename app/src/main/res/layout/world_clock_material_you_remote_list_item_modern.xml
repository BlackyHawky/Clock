<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- TWO-COLUMN VERSION (visible by default) -->
    <LinearLayout
        android:id="@+id/twoColumnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!-- LEFT COLUMN -->
        <LinearLayout
            android:id="@+id/leftContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextClock
                android:id="@+id/leftClockNoShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                tools:text="01:23 AM"
                tools:textSize="16sp"
                tools:textColor="@color/digital_widget_time_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cityNameLeftNoShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    tools:text="City1"
                    tools:textColor="@color/widget_text_color" />

                <TextView
                    android:id="@+id/cityDayLeftNoShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:ellipsize="none"
                    android:format12Hour="@string/abbrev_wday"
                    android:format24Hour="@string/abbrev_wday"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    tools:text="/ Mon"
                    tools:textColor="@color/widget_text_color" />

            </LinearLayout>

        </LinearLayout>

        <!-- RIGHT COLUMN -->
        <LinearLayout
            android:id="@+id/rightContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextClock
                android:id="@+id/rightClockNoShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:baselineAligned="true"
                tools:text="01:23 AM"
                tools:textSize="16sp"
                tools:textColor="@color/digital_widget_time_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cityNameRightNoShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    tools:text="City 2"
                    tools:textColor="@color/widget_text_color" />

                <TextView
                    android:id="@+id/cityDayRightNoShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:ellipsize="none"
                    android:format12Hour="@string/abbrev_wday"
                    android:format24Hour="@string/abbrev_wday"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    tools:text="/ Mon"
                    tools:textColor="@color/widget_text_color" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- SINGLE-COLUMN VERSION (used when there is only one city on the line) -->
    <LinearLayout
        android:id="@+id/singleColumnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/singleContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextClock
                android:id="@+id/singleClockNoShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                tools:text="01:23 AM"
                tools:textSize="16sp"
                tools:textColor="@color/digital_widget_time_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/singleCityNameNoShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    tools:text="City1"
                    tools:textColor="@color/widget_text_color" />

                <TextView
                    android:id="@+id/singleCityDayNoShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:ellipsize="none"
                    android:format12Hour="@string/abbrev_wday"
                    android:format24Hour="@string/abbrev_wday"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    tools:text="/ Mon"
                    tools:textColor="@color/widget_text_color" />

            </LinearLayout>

        </LinearLayout>

        <!-- Empty view to have a proper alignment -->
        <LinearLayout
            android:id="@+id/rightSpacer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:background="@android:color/transparent"
            android:orientation="vertical" />

    </LinearLayout>

    <!-- Spacer must be a RemoteView; can't use Space -->
    <FrameLayout
        android:id="@+id/citySpacer"
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</LinearLayout>
