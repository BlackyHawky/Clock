<resources>
    <declare-styleable name="PillView">
        <!-- Sets the center/radius of the circle relative to the view's bounds. -->
        <attr name="android:gravity" />
        <!-- The ARGB fill color of the circle. -->
        <attr name="pillFillColor" format="color" />
        <!-- The center x-coordinate of the circle. -->
        <attr name="pillCenterX" format="dimension" />
        <!-- The center y-coordinate of the circle. -->
        <attr name="pillCenterY" format="dimension" />
        <!-- The width of the pill. -->
        <attr name="pillWidth" format="dimension" />
        <!-- The height of the pill. -->
        <attr name="pillHeight" format="dimension" />
    </declare-styleable>

    <attr name="onStateTransition">
        <enum name="actionDown" value="1" />
        <enum name="actionDownUp" value="3" />
        <enum name="actionUp" value="2" />
        <enum name="sharedValueSet" value="4" />
        <enum name="sharedValueUnset" value="5" />
    </attr>

    <attr name="viewTransitionMode">
        <enum name="allStates" value="1" />
        <enum name="currentState" value="0" />
        <enum name="noState" value="2" />
    </attr>

</resources>
