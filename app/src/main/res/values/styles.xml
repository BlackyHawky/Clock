    <style name="AppPreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/AppSwitchPreference</item>
    </style>

    <style name="AppSwitchPreference" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/settings_switch_material</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TimerSetupDigit" parent="@style/Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton</item>
        <item name="backgroundTint">?colorSurface</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">36sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="CollapsingToolbarTitle.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CollapsingToolbarTitle.Expanded" parent="CollapsingToolbarTitle.Collapsed">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?colorAccent</item>
        <!-- Remove animation when floating action button is pressed -->
        <item name="pressedTranslationZ">0dp</item>
        <!-- color used by the icon -->
        <item name="tint">@color/md_theme_inverseOnSurface</item>
    </style>

    <style name="SnackBarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/bg_snackbar</item>
    </style>

    <!-- ================= -->
    <!--    TIME PICKER    -->
    <!-- ================= -->
    <style name="ThemeOverlay.App.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <!-- For dialog -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- For hour and minute fields -->
        <item name="chipStyle">@style/MaterialTimePickerChipStyle</item>
        <!-- For AM/PM button -->
        <item name="materialButtonOutlinedStyle">@style/MaterialTimePickerButtonOutlinedStyle</item>
    </style>

    <style name="MaterialTimePickerChipStyle" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="MaterialTimePickerButtonOutlinedStyle" parent="Widget.MaterialComponents.TimePicker.Button">
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- ================= -->
    <!--    DATE PICKER    -->
    <!-- ================= -->
    <style name="ThemeOverlay.App.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/MaterialCalendarStyle</item>
        <item name="materialCalendarHeaderLayout">@style/MaterialCalendarHeaderLayout</item>
        <item name="materialCalendarHeaderTitle">@style/MaterialCalendarHeaderTitle</item>
        <item name="materialCalendarHeaderToggleButton">@style/MaterialCalendarHeaderToggleButton</item>
        <item name="materialCalendarHeaderSelection">@style/MaterialCalendarHeaderSelection</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="MaterialCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="MaterialCalendarHeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="MaterialCalendarHeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="MaterialCalendarHeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="MaterialCalendarHeaderToggleButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">28dp</item>
    </style>

