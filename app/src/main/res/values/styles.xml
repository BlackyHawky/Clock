    <style name="TimerSetupDigit" parent="@style/Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">36sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CollapsingToolbarTitle.Collapsed" parent="@style/TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CollapsingToolbarTitle.Expanded" parent="CollapsingToolbarTitle.Collapsed">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorAccent</item>
        <!-- Remove animation when floating action button is pressed -->
        <item name="pressedTranslationZ">0dp</item>
        <!-- Color used by the icon -->
        <item name="tint">@color/md_theme_inverseOnSurface</item>
        <!-- Remove shadow -->
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SnackBarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/bg_snackbar</item>
    </style>

    <!-- ========== -->
    <!--   DIALOG   -->
    <!-- ========== -->
    <style name="AppAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">?attr/colorSurface</item>
        <item name="dialogCornerRadius">28dp</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AppMaterialAlertDialogTitleTextStyle</item>
    </style>

    <style name="AppMaterialAlertDialogTitleTextStyle" parent="@style/MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ======================= -->
    <!--   SPINNER TIME PICKER   -->
    <!-- ======================= -->
    <style name="SpinnerDialogTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AppMaterialTimePickerTitleStyle</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="AmPmStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
    </style>

    <!-- ================= -->
    <!--    TIME PICKER    -->
    <!-- ================= -->
    <style name="AppMaterialTimePickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <!-- Dialog background -->
        <item name="colorSurfaceContainerHigh">?attr/colorSurface</item>
        <!-- Selected hour/minute text color -->
        <item name="colorOnPrimaryContainer">?attr/colorPrimary</item>
        <!-- AM/PM selected background -->
        <item name="colorTertiaryContainer">?attr/colorPrimaryContainer</item>
        <!-- Selected AM/PM text color -->
        <item name="colorOnTertiaryContainer">?attr/colorPrimary</item>
        <!-- Dialog title -->
        <item name="materialTimePickerTitleStyle">@style/AppMaterialTimePickerTitleStyle</item>
    </style>

    <style name="AppMaterialTimePickerTitleStyle" parent="@style/TextAppearance.Material3.MaterialTimePicker.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- ======================= -->
    <!--   SPINNER DATE PICKER   -->
    <!-- ======================= -->
    <style name="SpinnerDateTheme">
        <item name="android:editTextStyle">@style/DatePickerEditText</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="DatePickerEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">22sp</item>
