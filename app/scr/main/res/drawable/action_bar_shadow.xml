<!-- Used at the top of scrollable content to give an appearance of height to the action bar. -->
<!-- Implemented using this shape rather than with elevation for backwards compatibility to KK. -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="270"
        android:startColor="#4D000000"
        android:endColor="@android:color/transparent"
        android:type="linear" />
    <size android:height="8dp" />
</shape>